pipeline {
    agent any 

    stages {
        stage('Build Stage') {
            steps {
                echo 'We are building now..'
				dir('maven-samples/single-module') {
                sh 'mvn clean install' }
            }
        }

        stage('Testing Stage') {
            steps {
                echo 'Testing...'
				dir('maven-samples/single-module'){
        stage('Testing Stage') 
                sh 'mvn test'  
                }
            }
        }
    }
}
